{
  "manifest_version": 3,
  "name": "Rolotabs",
  "version": "0.4.0",
  "description": "Your browsing rolodex â€” bookmarks that come alive as tabs",
  "permissions": [
    "bookmarks",
    "tabs",
    "tabGroups",
    "sidePanel",
    "favicon",
    "storage"
  ],
  "side_panel": {
    "default_path": "sidepanel.html"
  },
  "background": {
    "service_worker": "dist/background.js"
  },
  "action": {
    "default_title": "Rolotabs",
    "default_icon": {
      "16": "icons/icon16.png",
      "32": "icons/icon32.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "icons": {
    "16": "icons/icon16.png",
    "32": "icons/icon32.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "minimum_chrome_version": "114"
}
