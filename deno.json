{
  "nodeModulesDir": "auto",
  "imports": {
    "@std/assert": "jsr:@std/assert@^1.0.19",
    "@std/testing": "jsr:@std/testing@^1.0.17",
    "esbuild": "npm:esbuild@^0.24.2"
  },
  "tasks": {
    "test": "deno test test/",
    "check": "deno check src/**/*.ts",
    "build": "deno run -A build.ts",
    "dev": "deno run -A build.ts --watch",
    "fmt": "deno fmt src/ test/",
    "lint": "deno lint src/ test/"
  },
  "fmt": {
    "lineWidth": 100,
    "semiColons": true
  },
  "compilerOptions": {
    "strict": true,
    "lib": ["esnext", "dom", "dom.iterable", "deno.ns"]
  }
}
