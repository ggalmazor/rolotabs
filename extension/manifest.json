{
  "manifest_version": 3,
  "name": "Rolotabs",
  "version": "0.12.0",
  "description": "Your browsing rolodex â€” bookmarks that come alive as tabs",
  "permissions": [
    "bookmarks",
    "tabs",
    "tabGroups",
    "sidePanel",
    "favicon",
    "storage",
    "offscreen"
  ],
  "side_panel": {
    "default_path": "sidepanel.html"
  },
  "background": {
    "service_worker": "dist/background.js"
  },
  "action": {
    "default_title": "Rolotabs",
    "default_icon": {
      "16": "icons/icon16.png",
      "32": "icons/icon32.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "icons": {
    "16": "icons/icon16.png",
    "32": "icons/icon32.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  "commands": {
    "_execute_action": {
      "suggested_key": {
        "default": "Alt+S",
        "mac": "Alt+S"
      },
      "description": "Toggle Rolotabs side panel"
    },
    "copy-url": {
      "suggested_key": {
        "default": "Alt+C",
        "mac": "Alt+C"
      },
      "description": "Copy current tab URL to clipboard"
    }
  },
  "minimum_chrome_version": "114"
}
